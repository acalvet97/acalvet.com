---
import Header from '../sections/Header.astro';
import Layout from '../layouts/DefaultLayout.astro';
import Footer from '../sections/Footer.astro';

const title = 'Albert Calvet - Digital Product Manager'
const description =
  'Welcome to my personal little space online.'
const canonical = 'https://acalvet.com/'
---

<Layout title={title} description="{description}" canonical="canonical">
  <Header />
  <main>
    <section id="about" class="about flex items-center justify-center px-4 sm:px-24 md:px-8 py-24 min-h-[calc(100vh-165px)]">

      <div class="innerContainer w-xl flex flex-col gap-8">
        <img src=/profile.webp alt="Profile image of Albert Calvet" class="w-36 md:w-48 mix-blend-multiply filter saturate-0"/>
        <h1 class="text-4xl md:text-5xl/14 tracking-tight font-medium text-gray-950">Exploring the craft of building great digital products</h1>
        <p class="text-base md:text-lg text-gray-600">
          Currently leading a web team, I combine product thinking, design, and technical expertise to create meaningful digital experiences. Iâ€™m passionate about learning, discovery, and finding better ways to build.
        </p>
        <div class="hero-links mt-[1rem] flex flex-col sm:flex-row gap-4 sm:gap-[1rem]">
          <a href="/about" class="px-[2rem] py-[1rem] border rounded-lg border-gray-300 bg-gray-950 text-white hover:bg-gray-800 text-center">
            Get to know me
          </a>
          <a href="/insights" class="px-[2rem] py-[1rem] border rounded-lg border-gray-300 bg-gray-50 text-gray-950 hover:bg-white text-center">
            Read my Insights
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>


