---
import Header from '../sections/Header.astro'
import Layout from '../layouts/DefaultLayout.astro'
import Footer from '../sections/Footer.astro'

const title = 'Albert Calvet - About Me'
const description =
  'Passion for digital products, technology, and social impact.'
---

<Layout title="{title}" description="{description}" canonical="{canonical}">
    <Header />
    <main class="max-w-full min-h-[calc(100vh-165px)] flex flex-col justify-center items-center px-4 sm:px-6 lg:px-8]">
      <div class="pageHeadings py-16 w-full max-w-7xl flex flex-col gap-8 items-start">
        <h1 class="text-3xl md:text-5xl">About Me</h1>
        <p class="text-gray-600 text-base text-xl">{description}</p>
      </div>
    </main>
    <Footer />
</Layout>